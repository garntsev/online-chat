<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<VBox fx:controller="client.Controller" xmlns:fx="http://javafx.com/fxml" alignment="center">
    <TextArea fx:id="mainChatArea" VBox.vgrow="ALWAYS" />
    <HBox>
        <TextField fx:id="messageField" HBox.hgrow="ALWAYS" onAction="#sendMessage"/>
        <Button text="Send" onAction="#sendMessage" />
        <TextField text="login1" fx:id="loginField"/>
        <TextField text="pass1" fx:id="passField"/>
        <Button text="Auth" onAction="#onAuthClick" />
    </HBox>
</VBox>
